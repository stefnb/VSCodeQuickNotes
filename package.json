{
    "name": "quick-notes",
    "displayName": "Quick Notes",
    "description": "This extension enables you to take notes in vscode easily.",
    "version": "1.1.0",
    "engines": {
        "vscode": "^1.31.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "url": "https://github.com/sunliangqin/VSCodeQuickNotes.git"
    },
    "publisher": "Liangqin",
    "activationEvents": [
        "onCommand:quicknotes.toggle"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "quicknotes.toggle",
                "title": "Toggle Quick Notes"
            }
        ],
        "keybindings": [
            {
                "command": "quicknotes.toggle",
                "key": "alt+`"
            }
        ],
        "configuration": {
            "title": "Quick notes configuration",
            "properties": {
                "quicknotes.fileName": {
                    "type": "string",
                    "default": "notes.txt",
                    "description": "Quick notes file name."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.3.1",
        "vscode": "^1.1.28",
        "tslint": "^5.12.1",
        "@types/node": "^10.12.21",
        "@types/mocha": "^2.2.42"
    }
}
